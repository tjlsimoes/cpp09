{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug RPN (with arguments)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ex01/RPN",
            "args": [
               "1 10 +"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "showDisplayString": true
        },

        {
            "name": "Debug ./btc (with input.csv)",
